<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recyndecy"
    android:orientation="vertical"
    tools:context="com.stratafy.activities.SelectRecidencyActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtResidential"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/residence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@color/red"
                android:layout_width="150dp"
                android:layout_height="2dp"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtCommmercial"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/commercial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@color/blue"
                android:layout_width="150dp"
                android:layout_height="2dp"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtRetail"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/retail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@color/yellow"
                android:layout_width="150dp"
                android:layout_height="2dp"></LinearLayout>

        </LinearLayout>

    </LinearLayout>






</FrameLayout>
